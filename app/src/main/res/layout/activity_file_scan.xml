<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_file_scan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pangyinglei.myview1.FileScanActivity">

        <TextView
            android:id="@+id/file_scan_upline"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/file_scan_pathtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/file_scan_upline"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp" />

        <Button
            android:id="@+id/file_scan_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/file_scan_upline"
            android:text="@string/filepathback"
            android:textSize="15sp"
            android:textColor="@drawable/button_color_selector"/>

        <TextView
            android:id="@+id/file_scan_downline"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/file_scan_btn"
            android:background="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/file_scan_addtobookshelf"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="@string/str_addtobookshelf"
            android:textSize="15sp"
            android:textColor="@drawable/button_color_selector"/>

        <TextView
            android:id="@+id/file_scan_bottomline"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@id/file_scan_addtobookshelf"
            android:background="@color/colorPrimaryDark" />

        <ListView
            android:id="@+id/filescan_filelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/file_scan_bottomline"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/file_scan_downline"
            />

        <Button
            android:id="@+id/filescan_selectallbtn"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/file_scan_pathtxt"
            android:text="@string/str_selectall"
            android:textColor="@drawable/button_color_selector"
            />
</RelativeLayout>
