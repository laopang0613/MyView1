<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chapterlist_and_bookmark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pangyinglei.myview1.ChapterlistAndBookmark">
    <Button
        android:text="目录"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:id="@+id/chapterlistbtn" />

    <Button
        android:text="书签"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:id="@+id/bookmarkbtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <android.support.v4.view.ViewPager
        android:id="@+id/clbm_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chapterlistbtn">
    </android.support.v4.view.ViewPager>
</RelativeLayout>
