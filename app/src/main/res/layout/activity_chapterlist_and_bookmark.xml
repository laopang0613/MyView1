<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chapterlist_and_bookmark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pangyinglei.myview1.ChapterlistAndBookmark">

    <Button
        android:id="@+id/chapterlistbtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:text="@string/str_chapter_content_chapterlist" />

    <Button
        android:id="@+id/bookmarkbtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="50dp"
        android:text="@string/str_chapter_content_bookmark" />

    <TextView
        android:id="@+id/aty_cl_and_bm_topline"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/chapterlistbtn"
        android:textColor="#ff0000" />

    <android.support.v4.view.ViewPager
        android:id="@+id/clbm_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/aty_cl_and_bm_topline" />



</RelativeLayout>
